@model AddTodoViewModel
<form asp-controller="Todo" asp-action="AddNewToDo" method="post" class="form form-inline">

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <div class="row">
            <div class="col-xs-0">
                <div class="input-group">
                    <input type="text" class="form-control" asp-for="Text" placeholder="Todo text">
                    <span class="input-group-btn">
                                        <button class="btn btn-primary" type="submit">Add</button>
                                    </span>
                </div>
            </div>
        </div>
    </div>

</form>