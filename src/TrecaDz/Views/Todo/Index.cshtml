@using System.Threading.Tasks
@model IEnumerable<TodoRepo.Models.TodoItem>
@{
    ViewBag.Title = "Active todo items";
    Layout = "_Layout";
}
<h2 style="text-align: center" class="animated fadeInDown">Active items</h2>
<div class="container animated fadeInDown">
    <div class="row" style="text-align: center;">
        <a id="add-button">
            <ul class="btn btn-normal btn-primary">
                <span class="fa fa-plus fa-lg"></span>
                <strong>Add</strong>

            </ul>
        </a>

        <a asp-controller="Todo" asp-action="SeeCompleted">
            <ul class="btn btn-normal btn-default">
                <span class="fa fa-th-large fa-lg"></span>
                <strong>See completed</strong>

            </ul>
        </a>
    </div>
    <div id="add-form" style="display: none; text-align: center">
        @Html.Partial("Add", new AddTodoViewModel())
    </div>
</div>

<br/><br/>

<div class="container-fluid">
    <div class="row">
        <div class="card card-block">
            @foreach (var item in Model)
            {
                <div class="col-xs-0 col-sm-6 col-md-4 animated fadeInUp">
                    <div class="panel panel-default">
                        <div class="panel-body">

                            <strong>@item.Text</strong><br/>
                            <em style="font-size: 12px">Created : @item.DateCreated</em>

                        </div><a asp-controller="Todo" asp-action="MarkAsCompleted" asp-route-id="@item.Id">
                            <div class="panel-footer" style="text-align: center">

                                <span class="fa fa-check fa-lg"></span>
                                <strong>Mark as completed </strong>

                            </div>
                        </a>
                    </div>

                </div>
            }
        </div>
    </div>
</div>